---
import { work } from 'shared/cv.json'
---

<section id="experience" class="py-10 lg:px-36">
  <h2 class="mb-10 text-3xl font-bold">üè¢ Work Experience</h2>

  <section class="m-auto max-w-4xl flex flex-col items-center lg:items-start">
    {
      work.map((w) => (
        <article 
        class="relative flex w-fit lg:w-full flex-col gap-3 border-s-2 border-s-blue-100 border-opacity-30 pb-20 ps-5 before:absolute before:left-[-1px] before:top-2 before:aspect-square before:h-3 before:w-3 before:translate-x-[-50%] before:rounded-[100vmax] before:bg-blue-100 lg:flex-row lg:gap-10">
          <header class="w-4/5">
            <h3 class="text-xl font-bold">{w.position}</h3>
            <p>{w.name}</p>
            <p>{w.endDate}</p>
          </header>
          <p class="max-w-[50ch]">{w.summary}</p>
        </article>
      ))
    }
  </section>
</section>