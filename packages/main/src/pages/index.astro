---
import Layout from '@layouts/Layout.astro'
import Hero from '@components/sections/Hero.astro'
import Header from '@components/Header.astro'
import Experience from '@components/sections/Experience.astro'
import Projects from '@components/sections/Projects.astro'
import Works from '@components/sections/Works.astro'
import About from '@components/sections/About.astro'
---

<Layout title="Jhon A. Briones" description="Welcome to Jhon's personal digital space">
  <Header />
  <main class="w-full max-w-[1700px] m-auto">
    <Hero />
    <Works />
    <Experience />
    <Projects />
    <About />
  </main>
</Layout>

<style is:inline>
  body,main, main > section {
    background-color: #200926;
    
  }
  main > section {
    padding-inline: 1rem;
    
  }
</style>
